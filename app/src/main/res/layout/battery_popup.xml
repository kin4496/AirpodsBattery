<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/popup"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/settingBt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@drawable/bt_background"
            android:layout_marginRight="16dp"/>
        <ImageButton
            android:id="@+id/exitBt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@drawable/bt_background"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/modelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        tools:text="Airpods" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/quick_launch"
        android:layout_gravity="center"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="4">
        <ImageView
            android:id="@+id/app1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@drawable/border"/>
        <ImageView
            android:id="@+id/app2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@drawable/border"/>
        <ImageView
            android:id="@+id/app3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@drawable/border"/>
        <ImageView
            android:id="@+id/app4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@drawable/border"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Youtube"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border"></TextView>
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="YoutubeMusic"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border"></TextView>
        <TextView
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chrome"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border"></TextView>
        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chrome"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/popupLeftImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/left_airpod"
            android:background="@drawable/border"></ImageView>
        <ImageView
            android:id="@+id/popupCaseImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/case_airpod"
            android:background="@drawable/border"></ImageView>
        <ImageView
            android:id="@+id/popupRightImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/right_airpod"
            android:background="@drawable/border"></ImageView>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/podsServiceAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/leftinfo"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:progressDrawable="@drawable/battery_progress_full"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/leftinfonum"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="100%"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/caseinfo"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_weight="1"
                android:progressDrawable="@drawable/battery_progress_full" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/caseinfonum"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="100%"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/rightinfo"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_weight="1"
                android:progressDrawable="@drawable/battery_progress_full"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/rightinfonum"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="100%"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>